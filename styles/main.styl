@import "normalize.css"
@require "variables"
@require "transitions"
@require "buttons"

condensed-menu-open-height = 136px;

body
  margin: 0
  font-family: primary-font

.condensed-menu
  position: absolute
  background: dark-blue
  margin: 0
  left: 0
  right: 0
  top: -10px
  z-index: 0

.condensed-menu_items
  position: relative
  display: flex
  padding: 12px 10px 8px 10px
  flex-direction: column
  margin: 0

.condensed-menu_item
  display: block
  padding: 4px 16px 
  flex: none
  
.condensed-menu_item_link 
  color: #ddd
  display: inline-block
  font-size: 20px
  border-top: 1px solid transparent
  border-bottom: 1px solid transparent
  padding: 4px 0
  text-decoration: none

.condensed-menu_item.active .condensed-menu_item_link
  color: #fff
  border-bottom 1px solid #fff

.page
  background: #fff
  position: relative
  padding: 10px;
  -webkit-transition: -webkit-transform 600ms
  transition: transform 600ms
  z-index: 1;

  &.show-condensed-menu
    -webkit-transform: translate(0, condensed-menu-open-height)
    transform: translate(0, condensed-menu-open-height)

header
  display: flex
  border-bottom: 1px solid #ccc
  flex-direction: row
  justify-content: space-between
  margin: 0 auto 12px auto
  max-width: 1218px
  position: relative

.title-container
  align-items: flex-start
  display: flex
  flex-direction: column
  justify-content: space-between

.title
  font-size: 30px
  margin: 0
  padding: 0

.title_link
  color: dark-blue
  text-decoration: none
  
.tagline
  color: #666
  font-size: 18px
  margin: 0 42px 4px 0 
  padding: 0

.menu_items
  display: flex
  flex-direction: row
  margin: 0
  padding: 0
    
.menu_item
  display: block
  padding: 8px 16px 
  flex: none

.menu_item_link
  display: inline-block
  font-size: 18px
  padding: 4px 0
  color: dark-blue
  text-decoration: none
  border-top: 2px solid transparent
  border-bottom: 2px solid transparent
    
.menu_item.active .menu_item_link
  color: dark-blue
  border-bottom 2px solid dark-blue

.condensed-menu-button
  position: absolute
  top: 6px
  right: 12px
  height: 32px
  width: 32px
  background-size: contain
  background-image: url("data:image/svg+xml;utf8;base64,")
  cursor: pointer

.clear
  clear: both
  min-height: 1px

.clear-left
  clear: left

.button
  display: block
  padding: 5px 15px
  margin-top: 10px
  text-align: center
  border: 1px solid #888
  border-radius: 5px
  font-size: 20px
  background: highlight-blue
  color: #fff
  box-shadow: inset 0 1px 2px rgba(255,255,255,0.8), inset 0 -1px 2px rgba(0,0,0,0.6)
  text-decoration: none
  cursor: pointer
  &.gray
    background: #aaa
  &:active
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.6), inset 0 -1px 2px rgba(0,0,0,0.6)

.toggleButton
  float: right
  color: highlight-blue
  cursor: pointer

input[type=checkbox]
input[type=radio]
  display: inline-block
  margin-right: 5px
  position: relative
  top: -2px

.content
  max-width: 1200px
  position: relative
  margin: 10px auto 15px auto

  .sidebar
    float: right
    width: 210px

  .main
    margin-right: 218px

