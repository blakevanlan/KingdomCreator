  color: risingsun-color !important
  
// Move sidebar to the top
@media (max-width: (SizeDisplayedScreen/2)px)
  label.checkbox
    align-items: center
    display: flex
    flex-direction: row
    font-size: 23px
    line-height: 27px

    input[type=checkbox]
    input[type=radio]
      margin-right: 12px !important
      -webkit-transform: scale(1.5, 1.5)
      transform: scale(1.5, 1.5)

  .header
    margin: 5px -5px

  .content
    .sidebar
      float: none
      width: auto
      margin: 5px -5px
    .main
      margin: 5px -5px 0

@media (max-width: 425px)
  header
    .condensed-menu-button
      right: 0px

@media (max-width: 400px)
  header
    .title
      font-size: 24px

    h2.tagline
      font-size 14px

  label.checkbox
    font-size: 20px
    line-height: 25px




