// Fade
.fade-enter-active,
.fade-leave-active
  transition: opacity .15s

.fade-enter,
.fade-leave-to
  opacity: 0

// Slow fade
.slow-fade-enter-active,
.slow-fade-leave-active {
  transition: opacity .3s;
}
.slow-fade-enter,
.slow-fade-leave-to {
  opacity: 0;
}

// Expand fade
.expand-fade-enter-active
  transition: all .3s cubic-bezier(1.0, 0.2, 0.5, 1.0)

.expand-fade-leave-active
  transition: all .3s cubic-bezier(1.0, 0.5, 0.2, 1.0)

.expand-fade-enter
  transform: scale(1.1)
  opacity: 0

.expand-fade-leave-to
  transform: scale(0.9)
  opacity: 0

// Fade, slide in - fade out
.fade-slide-in-enter-active {
  transition: all .3s;
}
.fade-slide-in-leave-active {
  transition: all .1s;
}
.fade-slide-in-enter {
  transform: translateX(-10px);
  opacity: 0;
}
.fade-slide-in-leave-to {
  opacity: 0;
}